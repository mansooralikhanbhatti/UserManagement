@model User
@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid mt-4">
    <h2>@ViewData["Title"]</h2>

    <h3>Are you sure you want to delete this user?</h3>

    <div class="card">
        <div class="card-body">
            <p><strong>Name:</strong> @($"{Model.FirstName} {Model.MiddleName} {Model.LastName}")</p>
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.EmailID</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>City:</strong> @Model.City</p>
            <p><strong>Status:</strong> @Model.Status.StatusName</p>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger mt-3">Delete</button>
        <a asp-action="UserList" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
